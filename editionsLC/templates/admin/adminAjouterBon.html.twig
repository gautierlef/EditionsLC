{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Editions LC{% endblock %}

{% block body %}
    <center>
        {% if error == -1 %}
            <p style="width: 30%;" class="alert alert-success">Bon de dépôt ajouté avec succès!</p>
        {% endif %}
        {% if error == 1 %}
            <p style="width: 30%;" class="alert alert-danger">Ce bon de dépôt existe déjà!</p>
        {% endif %}
        <div style="width: 30%; border: 1px solid black; background-color: #efefef">
            <h3 style="font-weight:bold;text-decoration:underline;">Ajouter un bon de dépôt</h3>
            <br/>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_label(form.livre) }}
            {{ form_widget(form.livre) }}<br/>
            {{ form_label(form.nbEnvoyes) }}
            {{ form_widget(form.nbEnvoyes) }}<br/>
            {{ form_label(form.destinataire) }}
            {{ form_widget(form.destinataire) }}<br/>
            <div class="row">
                <div>
                    {{ form_widget(form.annuler) }}
                    <a style="margin-left:50px">{{ form_widget(form.valider) }}</a>
                    {{ form_end(form) }}
                </div>
            </div>
            <br/>
        </div>
    </center>
{% endblock %}
