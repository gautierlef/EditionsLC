{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Editions LC{% endblock %}

{% block body %}
    <center>
        {% if error == -1 %}
            <p style="width: 30%;" class="alert alert-success">Auteur(e) modifié(e) avec succès!</p>
        {% endif %}
        <div style="width: 30%; border: 1px solid black; background-color: #efefef">
            <h3 style="font-weight:bold;text-decoration:underline;">Modifier {{ auteur.pseudo }}</h3>
            <p>(Modifier le nom ou/et le prénom modifiera le pseudo)</p>
            <br/>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}<br/>
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom) }}<br/>
            {{ form_label(form.ville) }}
            {{ form_widget(form.ville) }}<br/>
            {{ form_label(form.mdp) }}
            {{ form_widget(form.mdp) }}<br/>
            <div class="row">
                <div>
                    {{ form_widget(form.annuler) }}
                    <a style="margin-left:50px">{{ form_widget(form.valider) }}</a>
                    {{ form_end(form) }}
                </div>
            </div>
            <br/>
        </div>
    </center>
{% endblock %}
