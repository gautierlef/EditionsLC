{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Editions LC{% endblock %}

{% block body %}
    <center>
        <div style="width: 30%; border: 1px solid black; background-color: #efefef">
            <h3 style="font-weight:bold;text-decoration:underline;">Supprimer une vente</h3>
            <p style="font-size: 15px">Attention cette action est irréversible êtes vous sûr de vouloir supprimer cette vente?</p>
            <br/>
            <div style="font-size: 20px">
                <p><strong>Titre : </strong>{{ vente.livre.titre }}</p>
                <p><strong>Auteur : </strong>{{ vente.livre.auteur.nom }} {{ vente.livre.auteur.prenom }}</p>
                <p><strong>Période : </strong>{{ vente.date.format("m/Y") }}</p>
                <p><strong>Source : </strong>{{ vente.source }}</p>
                <p><strong>Prix à l'unité : </strong>{{ vente.prix }}€</p>
                <p><strong>Nombre de ventes : </strong>{{ vente.nbVentes }}</p>
                <p><strong>Total : </strong>{{ vente.prix * vente.nbVentes }}€</p>
            </div>
            <br/>
            <form action="/admin-suppression-vente/{{ vente.id }}/1" Method="post">
                <td><button class="btn btn-danger">Supprimer</button></td>
            </form>
            <br/>
        </div>
    </center>
{% endblock %}
