{% extends 'admin/base.html.twig' %}

{% block title %}Administration - Editions LC{% endblock %}

{% block body %}
    <center>
        {% if error == -1 %}
            <p style="width: 30%;" class="alert alert-success">Service presse ajouté avec succès!</p>
        {% endif %}
        {% if error == 1 %}
            <p style="width: 30%;" class="alert alert-danger">Ce service presse existe déjà!</p>
        {% endif %}
        <div style="width: 30%; border: 1px solid black; background-color: #efefef">
            <h3 style="font-weight:bold;text-decoration:underline;">Ajouter un service presse</h3>
            <br/>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_label(form.livre) }}
            {{ form_widget(form.livre) }}<br/>
            {{ form_label(form.nbDonnes) }}
            {{ form_widget(form.nbDonnes) }}<br/>
            {{ form_label(form.destinataire) }}
            {{ form_widget(form.destinataire) }}<br/>
            <div class="row">
                <div>
                    {{ form_widget(form.annuler) }}
                    <a style="margin-left:50px">{{ form_widget(form.valider) }}</a>
                    {{ form_end(form) }}
                </div>
            </div>
            <br/>
        </div>
    </center>
{% endblock %}
