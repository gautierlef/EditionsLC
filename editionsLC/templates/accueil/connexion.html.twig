{% extends 'base.html.twig' %}

{% block title %}Auteurs - Editions LC{% endblock %}

{% block body %}
    <div class="container">
	<nav style="background-color:#e83753;" class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
		<div class="navbar-header">
                    <img width="50px" height="50px" src="images/Logo-LC.png"></img>
		</div>
		<div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
			<li><a style="color:#ffffff; font-weight:bold">Connexion</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
			<li><a style="color:#ffffff;" href="accueil">Retour Ã  l'accueil</a></li>
                    </ul>
		</div>
            </div>
	</nav>
    </div>
    <div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
            {% if error == 1 %}
                <div>
                    <center class="alert alert-danger">
                        <p>Pseudo ou  mot de passe incorrect!</p>
                        <p>(En cas d'oubli de mot de passe, veuillez contacter un administrateur)</p>
                    </center>
                </div>
            {% endif %}
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <p style="font-weight:bold; text-decoration: underline;">Pseudo :</p>
            {{ form_widget(form.pseudo) }}
            <br/>
            <p style="font-weight:bold; text-decoration: underline;">Mot de passe :</p>
            {{ form_widget(form.mdp) }}
            <br/>
            <center>
                {{ form_widget(form.annuler) }}
                <a style="margin-left:50px">{{ form_widget(form.valider) }}</a>
            </center>
            {{ form_end(form) }}
        </div>
        <div class="col-md-4"></div>
	</div>
    </div>
{% endblock %}